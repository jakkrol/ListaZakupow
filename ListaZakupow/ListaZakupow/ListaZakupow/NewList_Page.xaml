<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaZakupow.NewList_Page"
             Title="Dodaj Listę"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="#2a2a2a">
            <StackLayout BackgroundColor="#525252" InputTransparent="False" Margin="25, 50, 25, 50" >
            
                <Label Text="Nowa lista" TextColor="LightGreen" Margin="10, 10, 0, 0"></Label>
                <Entry x:Name="List_name" FontSize="20" Margin="10, 0" TextColor="Black"></Entry>
                <Button x:Name="AddNewList" BackgroundColor="Gray" Text="UTWÓRZ" TextColor="LightGreen" FontSize="15" Clicked="AddNewList_Clicked"></Button>
           
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>